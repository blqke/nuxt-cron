{
  "name": "nuxt-cron",
  "version": "1.0.2",
  "description": "A Nuxt module for cron jobs in your app.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hywax/nuxt-cron.git"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types.d.ts",
      "import": "./dist/module.mjs",
      "require": "./dist/module.cjs"
    }
  },
  "main": "./dist/module.cjs",
  "types": "./dist/types.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepack": "nuxt-module-build build",
    "dev": "nuxi dev playground",
    "dev:build": "nuxi build playground",
    "dev:prepare": "nuxt-module-build build --stub && nuxt-module-build prepare && nuxi prepare playground",
    "release": "yarn prepack && npm publish",
    "lint:es": "eslint --ext .js,.ts,.vue",
    "lint:prettier": "prettier --check .",
    "lint:fix": "prettier --write --list-different . && yarn lint:es --fix",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "docs": "nuxi dev docs",
    "docs:build": "CI=true nuxi generate docs"
  },
  "dependencies": {
    "@nuxt/kit": "^3.8.1",
    "cron": "^3.1.6",
    "fast-glob": "^3.3.2"
  },
  "devDependencies": {
    "@nuxt/devtools": "latest",
    "@nuxt/eslint-config": "^0.2.0",
    "@nuxt/module-builder": "^0.5.3",
    "@nuxt/schema": "^3.8.1",
    "@nuxt/test-utils": "^3.8.1",
    "@nuxtjs/eslint-config-typescript": "^12.1.0",
    "@types/node": "^20.8.10",
    "@typescript-eslint/parser": "^6.10.0",
    "changelogen": "^0.5.5",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "lint-staged": "^15.0.2",
    "nuxt": "^3.8.1",
    "prettier": "^3.1.0",
    "simple-git-hooks": "^2.9.0",
    "vitest": "^0.33.0"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged"
  },
  "lint-staged": {
    "*": "yarn lint:prettier"
  }
}
